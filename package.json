{
  "name": "vuefire",
  "version": "2.0.0-alpha.10",
  "description": "Firestore bindings for Vue.js",
  "main": "dist/vuefire.common.js",
  "module": "dist/vuefire.esm.js",
  "unpkg": "dist/vuefire.js",
  "browser": "dist/vuefire.esm.js",
  "files": [
    "dist/**",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "lint": "eslint --color --ext=js,html src test examples",
    "build": "node build/build.js",
    "pretest": "npm run lint",
    "test": "npm run unit",
    "unit": "jest",
    "dev": "npm run unit -- --watchAll",
    "prepublishOnly": "npm run build",
    "release": "release-it pre --preReleaseId=alpha --npm.tag=next --github.preRelease"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vuejs/vuefire.git"
  },
  "keywords": [
    "vue",
    "plugin",
    "mixin",
    "firebase",
    "cloud",
    "database",
    "google",
    "firestore",
    "realtime"
  ],
  "author": {
    "name": "Eduardo San Martin Morote"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vuejs/vuefire/issues"
  },
  "homepage": "https://github.com/vuejs/vuefire#readme",
  "peerDependencies": {
    "firebase": ">=4.0.0"
  },
  "devDependencies": {
    "babel-plugin-istanbul": "^4.1.6",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.19.1",
    "eslint-plugin-html": "^4.0.3",
    "eslint-plugin-vue-libs": "^2.1.0",
    "firebase": "^4.12.1",
    "jest": "^22.4.3",
    "mkdirp": "^0.5.1",
    "rollup": "^0.57.1",
    "rollup-plugin-buble": "^0.19.2",
    "uglify-js": "^3.3.21",
    "vue": "^2.5.16"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/*.js"
    ]
  }
}
